<% layout('layouts/boilerplate')%>
<div style="display:flex;justify-content: space-between;">
    <h1>ALL PRODUCTS</h1>
    <div>
        <a class="btn" style="background-color:rgb(36, 5, 175);color:white" href="/campgrounds/new">Add Product</a>
    </div>
</div>
<% for (let campground of campgrounds){%>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img height="300px" style="margin-left: 50px;"alt="" src="<%=campground.image%>">
        </div>
        <div class="col-md-8 d-flex justify-content-center align-items-center">
            <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <h2 class="card-title"><%= campground.title %> </h2><br>
                <a class="btn" style="background-color:rgb(36, 5, 175);color:white" href="/campgrounds/<%=campground._id%>">View <%=campground.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>