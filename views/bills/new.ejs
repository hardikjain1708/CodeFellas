<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Bill</h1>
        <div class="col-6 offset-3">
            <form action="/bills/new" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Customer Name</label>
                    <input class="form-control" type="text" id="title" name="customer[customerName]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Phone Number</label>
                    <input class="form-control" type="tel" id="location" name="customer[customerPhoneNum]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Make Bill</button>
                </div>
            </form>
        </div>
    </div>
